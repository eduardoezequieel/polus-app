<?xml version='1.0' encoding='utf-8'?>
<widget id="com.polus.app" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Polus</name>
    <description>
        Nunca es suficiente ropa.
    </description>
    <author email="riv.edu10@gmail.com" href="https://github.com/eduardxlr/polus-app">
        Equipo de Desarrollo de Polus
    </author>
    <icon src="/www/img/logo.png" platform="android" width="57" height="57" density="mdpi" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
